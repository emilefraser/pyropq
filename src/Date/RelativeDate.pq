section Date;


shared Date.GetToday = () =>
	Date.From(DateTime.FixedLocalNow());

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

shared Date.GetTomorrow = () =>
	Date.AddDays(Date.From(DateTime.FixedLocalNow()), 1);

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

shared Date.GetYesterday = () =>
	Date.AddDays(Date.From(DateTime.FixedLocalNow()), -1);

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
/**
* returns the date of N days ago from Today
*
* @categories date 
* @license MIT (c) 2014 tycho01
* @author https://github.com/KiaraGrouwstra/pquery
* @version 20210121-1
*/ 
shared Date.GetNDaysAgo = (N as number) => 
	Date.AddDays(DateTime.FixedLocalNow(), -N);

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

shared Date.GetNDaysInFuture = (N as number) => 
	Date.AddDays(Date.From(DateTime.FixedLocalNow()), N);

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////