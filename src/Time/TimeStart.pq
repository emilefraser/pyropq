section Time;


shared Date.StartOfHour = () => 
	DateTime.From(Time.StartOfHour(DateTime.FixedLocalNow()));

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

shared Date.StartOfMinute = () =>  
	DateTime.From(Time.StartOfHour(DateTime.FixedLocalNow()) + #duration(0, 0, Time.Minute(DateTime.FixedLocalNow()), 0));

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

shared Date.StartOfSecond = () =>  
	DateTime.From(Time.StartOfHour(DateTime.FixedLocalNow()) + #duration(0, 0, Time.Minute(DateTime.FixedLocalNow()), Number.RoundDown(Time.Second(DateTime.FixedLocalNow()))));
    

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
